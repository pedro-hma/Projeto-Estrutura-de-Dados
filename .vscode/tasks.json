{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compilar biblioteca",
            "type": "shell",
            "command": "gcc",
            "args": [
                "main.c",
                "usuario.c",
                "livro.c",
                "tabelahash.c",
                "-o",
                "bin/biblioteca"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compilando todos os arquivos .c"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}